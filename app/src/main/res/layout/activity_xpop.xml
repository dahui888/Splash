<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".splash.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@mipmap/kf_bg_compensation"
    android:layout_height="wrap_content">
</RelativeLayout>
    <Button
        android:id="@+id/bt1"
        android:text="确认和取消对话框"
        android:textColor="@color/golden"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/black_btn_bg"
        android:layout_width="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt2"
        android:text="带输入框的确认取消对话框"
        android:textColor="@color/golden"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/black_btn_bg"
        android:layout_width="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt3"
        android:text="中间弹出的列表弹窗"
        android:textColor="@color/golden"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/black_btn_bg"
        android:layout_width="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt4"
        android:text="中间弹出的加载框"
        android:textColor="@color/golden"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/black_btn_bg"
        android:layout_width="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt5"
        android:text="从底部弹出列表弹窗"
        android:textColor="@color/golden"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/black_btn_bg"
        android:layout_width="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt6"
        android:text="依附于某个View某个点的弹窗"
        android:textColor="@color/golden"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/black_btn_bg"
        android:layout_width="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt7"
        android:text="大图浏览弹窗"
        android:visibility="gone"
        android:textColor="@color/golden"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/black_btn_bg"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt8"
        android:text="自定义侧边栏DrawerLayout"
        android:textColor="@color/golden"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/black_btn_bg"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt9"
        android:text="自定义Bottom弹框"
        android:textColor="@color/golden"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/black_btn_bg"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
</LinearLayout>